require('dotenv').config();
const express = require('express');
const bodyParser = require('body-parser');
const pool = require('./utils/db');

const app = express();
const PORT = process.env.PORT || 3000;

app.use(bodyParser.json());
app.use(express.static('public'));

// ✅ Home Route (Mini App)
app.get('/', (req, res) => {
    res.sendFile(__dirname + '/public/index.html');
});

// ✅ Reward API (Monetag Ad watched)
app.post('/reward', async (req, res) => {
    const { userId, points } = req.body;
    if (!userId || !points) return res.status(400).send('Invalid data');

    try {
        const user = await pool.query("SELECT * FROM users WHERE telegram_id=$1", [userId]);
        if(user.rows.length === 0){
            await pool.query("INSERT INTO users (telegram_id, points, ads_watched) VALUES ($1, $2, $3)", [userId, points, 1]);
        } else {
            await pool.query("UPDATE users SET points = points + $1, ads_watched = ads_watched + 1 WHERE telegram_id=$2", [points, userId]);
        }
        res.json({ success: true });
    } catch (err) {
        console.error(err);
        res.status(500).send('DB Error');
    }
});

// ✅ Referral API
app.post('/referral', async (req, res) => {
    const { referrerId } = req.body;
    if(!referrerId) return res.status(400).send('Invalid data');

    try {
        await pool.query("UPDATE users SET points = points + 250, referrals = referrals + 1 WHERE telegram_id=$1", [referrerId]);
        res.json({ success: true });
    } catch(err) {
        console.error(err);
        res.status(500).send('DB Error');
    }
});

// ✅ Withdraw API
app.post('/withdraw', async (req, res) => {
    const { userId } = req.body;
    if(!userId) return res.status(400).send('Invalid data');

    try {
        const user = await pool.query("SELECT points FROM users WHERE telegram_id=$1", [userId]);
        if(user.rows[0].points >= 5000){
            await pool.query("UPDATE users SET points = points - 5000 WHERE telegram_id=$1", [userId]);
            res.json({ success: true, message: "Withdraw requested successfully!" });
        } else {
            res.json({ success: false, message: "Minimum 5000 points required." });
        }
    } catch(err) {
        console.error(err);
        res.status(500).send('DB Error');
    }
});

// ✅ Start Server
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
