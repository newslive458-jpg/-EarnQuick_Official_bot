let points = 0, adsWatched = 0, refCount = 0;
function watchAd() {
    show_10070523().then(() => {
        points += 10;
        adsWatched += 1;
        document.getElementById("points").innerText = points;
        document.getElementById("adsWatched").innerText = adsWatched;
        fetch('/reward', {
            method:'POST',
            headers:{'Content-Type':'application/json'},
            body: JSON.stringify({userId: document.getElementById("userId").innerText, points: 10})
        });
        alert('10 ржХрзЯрзЗржи ржпрзЛржЧ рж╣ржпрж╝рзЗржЫрзЗ!');
    }).catch(()=>alert('ржПржб ржжрзЗржЦрж╛ рж╣рзЯржирж┐, ржкрзЯрзЗржирзНржЯ рж╣рзЯржирж┐ред'));
}

function withdraw() {
    fetch('/withdraw', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({userId: document.getElementById("userId").innerText})
    }).then(res=>res.json()).then(data=>alert(data.message));
}

function addReferral() {
    refCount += 1;
    points += 250;
    document.getElementById("refCount").innerText = refCount;
    document.getElementById("points").innerText = points;
    fetch('/referral', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({referrerId: document.getElementById("userId").innerText})
    });
    alert('рж░рзЗржлрж╛рж░рзЗрж▓ ржпрзЛржЧ рж╣рзЯрзЗржЫрзЗ рзирзлрзж ржкржпрж╝рзЗржирзНржЯ!');
}

function toggleTerms(){
    const t = document.getElementById("terms");
    t.style.display = t.style.display==='none'?'block':'none';
}
